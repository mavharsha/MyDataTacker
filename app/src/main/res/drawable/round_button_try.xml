<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <solid android:color="#3FC380"/> <!-- this one is ths color of the Rounded Button -->
            <stroke
                android:height="5.0dip"
                android:width="5.0dip"
                android:color="#3FC380" />
            <gradient android:angle="-90"  android:startColor="#3FC380"   android:endColor="#3FC380"/>
            <corners
                android:radius="14dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <gradient android:angle="-90" android:startColor="#3FC380"   android:endColor="#3FC380"/>

            <stroke
                android:height="5.0dip"
                android:width="5.0dip"
                android:color="#3FC380" />
            <corners
                android:radius="14dp"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <solid android:color="#3FC380"/> <!-- this one is ths color of the Rounded Button -->
            <corners
                android:radius="14dp"/>
            <gradient android:angle="-90" android:startColor="#3FC380"   android:endColor="#3FC380"/>

        </shape>
    </item>

</selector>